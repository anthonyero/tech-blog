{{#if logged_in}}   
   <h2>Update Post</h2>

    <form class="form update-post-form">
      <h3>{{post.title}}</h3>
      <div class="form-group">
        <label for="update-post-text">Text:</label>
        <input class="form-input" type="text" id="update-post-text" placeholder="{{post.text}}" />
      </div>
      <div class="form-group">
        <button name="{{post.id}}" class="submit-update-btn btn btn-primary" type="submit">Update!</button>
      </div>
    </form>
  </div>
{{!-- <script src="/js/update-post.js"></script> --}}

{{/if}}